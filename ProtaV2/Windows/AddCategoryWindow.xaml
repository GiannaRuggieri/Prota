<Window x:Class="ProtaV2.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        xmlns:local="clr-namespace:ProtaV2"
        mc:Ignorable="d"
        Title="AddCategoryWindow" 
        ResizeMode="NoResize"	
		WindowStartupLocation="CenterScreen"
        Icon="/Images/ProtaLogo.ico"
        Height="580" 
        Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ProtaTheme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label
            x:Name="Title"
            Grid.Column="0"
            Grid.ColumnSpan="2"
			Content="Add New Category"
			FontFamily="{StaticResource Notepad}"
            FontWeight="Bold"
			FontSize="32"
			Foreground="Black"
			HorizontalContentAlignment="Center"/>

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2">
            <Border.Background>
                <LinearGradientBrush 
                        EndPoint="0, 30" 
                        StartPoint="0, 0" 
                        MappingMode="Absolute" 
                        SpreadMethod="Repeat">
                    <GradientStop Color="LightBlue" Offset="0" />
                    <GradientStop Color="LightBlue" Offset="0.1" />
                    <GradientStop Color="White" Offset="0.1" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <StackPanel
            Grid.Column="0"
            Grid.Row="1"
            Margin="15, 0, 0, 0">
            <Label
                    x:Name="NameLabel"
			        Content="Name"
			        FontFamily="{StaticResource Notepad}"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="15, 0, 0, 0"
                    Height="30"
                    VerticalContentAlignment="Bottom"
			        FontSize="22"
			        Foreground="Black"
			        HorizontalContentAlignment="Center"/>

            <Border
                        BorderBrush="Black"
                        CornerRadius="8"
                        BorderThickness="2"
                        Width="350"
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="15, 0, 0, 0">
                <TextBox
                        x:Name="NameText"
                        Text=""
                        BorderBrush="Transparent"
                        Background="Transparent"
                        FontSize="22"
                        Height="25"
                        VerticalAlignment="Bottom"
                        FontFamily="{StaticResource Notepad}"
                        TextChanged="NameText_TextChanged"/>
            </Border>

            <Border
				BorderBrush="Transparent"
				BorderThickness="1"
				CornerRadius="0, 0, 16, 16"
				Background="LightYellow"
                Width="360"
                Height="300"
                Margin="0, 25, 0, 0"
                VerticalAlignment="Bottom">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" />
                </Border.Effect>

                <StackPanel>
                    <TextBlock
                        x:Name="PreviewLabel"
			            Text="Category Preview:"
			            FontFamily="{StaticResource Notepad}"
                        FontWeight="Bold"
                        Margin="35"
                        TextAlignment="Center"
                        HorizontalAlignment="Center"
			            FontSize="22"
                        TextWrapping="Wrap"
			            Foreground="Black"
                        Width="210"/>

                    <Border 
                        x:Name="Border"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="12" 
                        Background="White" 
                        Padding="2"
                        Margin="0, 5, 0, 5"
                        Width="210"
                        Height="80">
                        <Grid>
                            <TextBlock
                                x:Name="CategoryPreview"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                IsHitTestVisible="False"
                                Background="Transparent"
                                Foreground="Black"
                                TextWrapping="Wrap"
                                FontFamily="{StaticResource Notepad}"
                                FontSize="22"
                                Padding="4"
                                Text="Example"/>
                        </Grid>
                    </Border>
                </StackPanel>


            </Border>

        </StackPanel>

        <StackPanel
            Grid.Column="1"
            Grid.Row="1">
            <Label
                x:Name="ColorLabel"
			    Content="Color"
			    FontFamily="{StaticResource Notepad}"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="35, 0, 0, 0"
                Height="30"
                VerticalContentAlignment="Bottom"
			    FontSize="22"
			    Foreground="Black"
			    HorizontalContentAlignment="Center"/>

            <Border
				BorderBrush="Transparent"
				BorderThickness="1"
				CornerRadius="0, 0, 16, 16"
				Background="LightYellow"
                Width="360"
                Height="355"
                VerticalAlignment="Bottom">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" />
                </Border.Effect>

                <Border
                    Background="White"
                    Height="250"
                    Width="300"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="16"
                    Padding="5">
                    <colorpicker:SquarePicker 
                        x:Name="CategoryColorPicker"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        SelectedColor="White"
                        ColorChanged="CategoryColorPicker_ColorChanged" 
                        Height="200"
                        Width="200"
                    />
                </Border>

            </Border>

            <Button
                x:Name="AddButton"
                Content="Save"
                Style="{StaticResource DefaultButton}"
                FontFamily="{StaticResource Notepad}"
                Margin="0, 30, 20, 0"
                Width="150"
                Height="50"
                FontSize="24"
                HorizontalAlignment="Right"
                IsEnabled="False"
                Click="AddButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
