<Page x:Class="ProtaV2.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtaV2"
      mc:Ignorable="d" 
      Height="780" 
      Width="1600"
      Title="HomePage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ProtaTheme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <!--ALL OF MY COMMENTS ARE ON THE LINE ***ABOVE*** WHAT I'M REFERRING TO -GR-->
    
    <!--Outer grid for page content helps outline where our content will go -GR-->
    <Grid>
        <!--Inner grid for main content helps break down into 3 columns and subsections within the page -GR-->
        <Grid>
            <!--Defines all of our vertical columns and spacing -GR-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>
            
            <!--Defines all of our horizontal rows and spacing -GR-->
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="700"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>
            
            <!--Beginning of formatting for Upcoming Tasks Column -GR -->
            <Border
                Grid.Column="1"
				Grid.Row="1">

                <StackPanel>
                    <Border
                        BorderBrush="Black"
						BorderThickness="0, 0, 0, 3"
						CornerRadius="0"
						Margin="15">
                        <Grid>
                            <Label
                                Content="Upcoming Tasks"
							    FontFamily="{StaticResource Bainsley}"
							    FontSize="32"
                                FontWeight="Bold"
							    Foreground="Black"
                                Margin="0, 18, 0, 0"
							    HorizontalContentAlignment="Center"/>
                            
                        </Grid>
                    </Border>

                    <Border
                        BorderBrush="Transparent"
						BorderThickness="1"
						CornerRadius="16"
						Background="Transparent"
                        VerticalAlignment="Bottom">

                        <StackPanel>
                            <Border
                                Margin="15, 0, 15, 15"
                                BorderBrush="Transparent"
                                BorderThickness="2"
                                CornerRadius="0, 0, 16, 16"
                                Padding="10">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="16" />
                                </Border.Effect>
                                
                                <Border.Background>
                                    <SolidColorBrush Color="LightYellow"/>
                                </Border.Background>
                                <ListBox
                                    x:Name="UpcomingTasksListbox"
                                    ScrollViewer.CanContentScroll="False"
								    Height="535"
                                    Width="240"
								    VerticalAlignment="Top"
                                    HorizontalAlignment="Center"
                                    Margin="0, 0, 0, 0"
                                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
								    Background="Transparent" 
                                    BorderThickness="0"
                                    SelectionChanged="UpcomingTasksListbox_SelectionChanged"
                                    d:ItemsSource="{d:SampleData ItemCount=15}">

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border 
                                                x:Name="Border"
                                                BorderBrush="Black"
                                                BorderThickness="3"
                                                CornerRadius="12" 
                                                Background="{Binding TaskBrush}" 
                                                Padding="2"
                                                Margin="0, 5, 0, 5"
                                                Width="210">
                                                <Grid>
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        IsHitTestVisible="False"
                                                        Background="Transparent"
                                                        Foreground="Black"
                                                        TextWrapping="Wrap"
                                                        Text="{Binding TaskName}"
                                                        FontFamily="{StaticResource Bainsley}"
                                                        FontSize="22"
                                                        Padding="4">
                                                        <!-- Not quite sure what this is for -GR
                                                        <Run Text="{Binding CategoryName}"> </Run>
                                                        <Run >(</Run>
                                                        <Run Text="{Binding Amount}"> </Run>
                                                        <Run>)</Run>
                                                        -->
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>

                                </ListBox>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            <!--End of formatting for Upcoming Tasks Column -GR -->
            
            <!--Beginning of formatting for Task Description Column -GR-->
            <Border
                Grid.Column="2"
				Grid.Row="1">

                <StackPanel>
                    <Border
                        BorderBrush="Black"
						BorderThickness="0, 0, 0, 3"
						CornerRadius="0"
						Margin="15">

                        <Label
                            x:Name="TaskDescriptionName"
							Content="Task Description"
							FontFamily="{StaticResource Bainsley}"
                            FontWeight="Bold"
							FontSize="32"
							Foreground="Black"
							Margin="0, 18, 0, 0"
							HorizontalContentAlignment="Center"/>
                    </Border>

                    <Border
                        BorderBrush="Transparent"
						BorderThickness="1"
						CornerRadius="0, 0, 16, 16"
						Background="LightYellow"
						Margin="15, 0, 15, 0"
                        Height="560"
                        Padding="20"
                        VerticalAlignment="Bottom">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="16" />
                        </Border.Effect>

                        <Border
                            
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="16">
                            <Border.Background>
                                <SolidColorBrush
                                Color="{StaticResource _White}">

                                </SolidColorBrush>
                            </Border.Background>
                            <StackPanel>
                                <Border>
                                    <!--the height in the description box is 510px to cover the entire white space -GR-->
                                    <!--We also are not adding a location or due date here so those are excluded -GR-->
                                    <TextBox
                                        x:Name="DescriptionText"
                                        BorderBrush="Transparent"
                                        Background="Transparent"
                                        IsReadOnly="True"
                                        Width="892"
                                        TextWrapping="Wrap"
                                        IsHitTestVisible="False"
							            Padding="10"
                                        Height="510" 
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        ScrollViewer.CanContentScroll="True"
                                        Text="Select an upcoming task to view its description"
                                        Foreground="Black"
                                        FontFamily="{StaticResource Bainsley}"
                                        FontSize="24"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Border>
                </StackPanel>
            </Border>
            <!--End of formatting for Task Description Column -GR-->

            <!--Beginning of formatting for Completed Tasks Column -GR-->
            <Border
                Grid.Column="3"
				Grid.Row="1">

                <StackPanel>
                    <Border
                        BorderBrush="Black"
						BorderThickness="0, 0, 0, 3"
						CornerRadius="0"
						Margin="15">

                        <Grid>
                            <Label
							Content="Completed Tasks"
							FontFamily="{StaticResource Bainsley}"
                            FontWeight="Bold"
							FontSize="32"
							Foreground="Black"
							Margin="0, 18, 0, 0"
							HorizontalContentAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border
                        BorderBrush="Transparent"
						BorderThickness="1"
						CornerRadius="16"
                        VerticalAlignment="Bottom">
                        <StackPanel>
                            <Border
                                BorderBrush="Transparent"
						        BorderThickness="1"
						        CornerRadius="16"
						        Margin="0, 0, 0, 0"
                                VerticalAlignment="Bottom">
                                <StackPanel>
                                    <Border
                                        Margin="15, 0, 15, 15"
                                        BorderBrush="Transparent"
                                        BorderThickness="2"
                                        CornerRadius="0, 0, 16, 16"
                                        Padding="10">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="16" />
                                        </Border.Effect>
                                        
                                        <Border.Background>
                                            <SolidColorBrush Color="LightYellow"/>
                                        </Border.Background>
                                        <ListBox
                                            x:Name="CompletedTasksListbox"
                                            ScrollViewer.CanContentScroll="False"
								            Height="535"
                                            Width="240"
								            VerticalAlignment="Top"
                                            HorizontalAlignment="Center"
                                            Margin="0, 0, 0, 0"
                                            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
								            Background="Transparent" 
                                            BorderThickness="0"
                                            SelectionChanged="CompletedTasksListbox_SelectionChanged"
                                            d:ItemsSource="{d:SampleData ItemCount=15}">
                                            
                                            <!--Unsure if i should rename borders and binding/ if those will interfere with the ListBox.ItemTemplate from the upcoming tasks column -GR-->
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>

                                                    <Border 
                                                        x:Name="Border"
                                                        BorderBrush="Black"
                                                        BorderThickness="2"
                                                        CornerRadius="12" 
                                                        Background="{Binding TaskBrush}" 
                                                        Padding="2"
                                                        Margin="0, 5, 0, 5"
                                                        Width="210">
                                                        <Grid>
                                                            <TextBlock
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                IsHitTestVisible="False"
                                                                Background="Transparent"
                                                                Foreground="Black"
                                                                TextWrapping="Wrap"
                                                                Text="{Binding TaskName}"
                                                                FontFamily="{StaticResource Bainsley}"
                                                                FontSize="22"
                                                                Padding="4"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            <!--End of formatting for Completed Tasks Column -GR-->
            
