<Page x:Class="ProtaV2.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtaV2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ProtaTheme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <StackPanel>
            <Label
                x:Name="WelcomeMessage"
			    Content="Welcome!"
			    FontFamily="{StaticResource Notepad}"
                FontWeight="Bold"
			    FontSize="48"
			    Foreground="Black"
			    Margin="0, 50, 0, 0"
			    HorizontalContentAlignment="Center"/>

            <Label
                x:Name="WelcomeMessageSubtext"
			    Content="Ready to tackle the day?"
			    FontFamily="{StaticResource Notepad}"
                FontWeight="Bold"
			    FontSize="32"
			    Foreground="Black"
			    HorizontalContentAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</Page>
