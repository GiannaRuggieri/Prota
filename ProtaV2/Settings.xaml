<Page x:Class="ProtaV2.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtaV2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <GroupBox Header="GroupBox">
        <UniformGrid Rows="7" HorizontalAlignment="Center">
            <Button Content="Button" Height="50" Width="100" />
            <TextBlock Text="text" HorizontalAlignment="Center"
                       TextAlignment="Center" Height="20" Margin="0,15,0,14" 
                       Width="71"/>
            <TextBox Text=" some text" HorizontalAlignment="Center" 
                     TextAlignment="Center"/>
            <RadioButton x:Name="DarkMode" Content="Black Mode" 
                         HorizontalAlignment="Center" Height="20"/>
            <RadioButton x:Name="LightMode" Content="Black Mode" 
                         HorizontalAlignment="Center" Height="20"/>
            <RadioButton x:Name="NormalMode" Content="Black Mode" 
                         HorizontalAlignment="Center" Height="20"/>
            <RadioButton x:Name="WhiteMode" Content="Black Mode" 
                         HorizontalAlignment="Center" Height="20"/>
        </UniformGrid>
    </GroupBox>
</Page>
